<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:title="@string/pref_enable_service"
        android:summary="@string/pref_enable_service_desc"
        android:icon="@drawable/ic_touch"
        android:enabled="true"
        android:key="service" />

    <SwitchPreference
        android:title="@string/pref_hide_navbar"
        android:summary="@string/pref_hide_navbar_desc"
        android:icon="@drawable/ic_align_bottom"
        android:enabled="true"
        android:key="hide_navbar" />

    <PreferenceCategory android:title="@string/pref_experimental">
        <Preference
            android:title="@string/pref_take_screenshot"
            android:summary="@string/pref_take_screenshot_initial_desc"
            android:icon="@drawable/ic_photo"
            android:enabled="true"
            android:key="screenshot" />
    </PreferenceCategory>
</PreferenceScreen>
